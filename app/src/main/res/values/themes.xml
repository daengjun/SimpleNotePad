<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MySimpleNote" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">#1F1E1E</item>
        <item name="colorControlHighlight">#597C7878</item>
        <item name="colorPrimary">#FE353333</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorHighlight">#99454343</item>
        <item name="floatingActionButtonStyle">@style/MyFABStyle</item>
    </style>

    <style name="MyFABStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#424040</item>
    </style>

    <style name="Theme.MySimpleNote" parent="Base.Theme.MySimpleNote" />

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>